void sort012(int *arr, int n)
{
   //   Write your code here
   int one=0;
   int two=0;
   int zero=0;
   for(int i=0;i<n;i++){
      if(arr[i]==0){
         zero++;
      }
      else if(arr[i]==1){
         one++;
      }
      else if(arr[i]==2){
         two++;
      }
   }
   int j=0;
   while(zero){
      arr[j]=0;
      j++;
      zero--;
   }
   while(one){
      arr[j]=1;
      j++;
      one--;
   }
   while(two){
      arr[j]=2;
      j++;
      two--;
   }
   
   
}
