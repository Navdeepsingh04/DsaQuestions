string convertString(string str) 

{

       bool flag=false;

    for(int i=0; i<str.length(); i++)

    {

        if((str[i]>='a' && str[i]<='z') || (str[i]>='A' && str[i]<='Z') )

        {

            if(flag==false)

            str[i]=(char)toupper(str[i]);

            flag=true;

        }

        else

        flag=false;

    

    }

    return str;

}
